<html>
<head>
  <meta charset="utf-8">
  
  <title>Fashion Feet</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="plugins/fontawesome-free/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="dist/css/adminlte.min.css">
  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
  
 
</head>
<body class="hold-transition sidebar-mini">
	
	<div class="wrapper">
		
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
		<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
				<a class="nav-link" data-widget="pushmenu" href="#" role="button"> 
                                           <i class="fas fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
				<a href="/" class="nav-link">Home</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->
		
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
		<!-- Brand Logo -->
			<a href="#" class="brand-link">
			  <img src="logo.jpg"
				   alt="Fashion Feet Logo"
				   class="brand-image img-circle elevation-3">
			  <span class="brand-text font-weight-light">Fashion</span>
			</a>
			<!-- Sidebar -->
			<div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                      <li class="nav-item">
                        <a href="#" class="nav-link">
                          <i class="nav-icon far fa-circle text-info"></i>
                          <p>Add Product</p>
                        </a>
                      </li>
                      <li class="nav-item">
                        <a href="/delete" class="nav-link">
                          <i class="nav-icon far fa-circle text-info"></i>
                          <p class="text">Delete Sales</p>
                        </a>
                      </li>
                      <li class="nav-item">
                        <a href="/update" class="nav-link">
                          <i class="nav-icon far fa-circle text-info"></i>
                          <p class="text">Update Sales</p>
                        </a>
                      </li>
                      
                    </ul>
                </nav>
			</div>
			<!-- /.sidebar -->
		</aside>
		
		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">
			
			<section class="content-header">
				<h1>Fashion Feet Inventory Management</h1>
			</section>
			
			<section class="content">
				<form action='add' method="POST">
                    <label>Product Id: </label>
                    <input type="number" placeholder="Enter product ID" name="pid"><br>
                    <label>Brand: </label>
                    <input type="text" placeholder="Enter Brand" name="brand"><br>
                    <label>Product Category: </label>
                    <input type="text" placeholder="Enter Product Category" name="category"><br>
                    <label>Type of product: </label>
                    <input type="text" placeholder="Enter Type of product" name="name"><br>
                    <label>Size: </label>
                    <input type="number" placeholder="Enter Size" name="size"><br>
                    <label>Stock: </label>
                    <input type="number" placeholder="Enter Stock" name="stock"><br>
                    <label>Cost Price: </label>
                    <input type="number" placeholder="Enter CP" name="costP"><br>
                    <label>Sell Price: </label>
                    <input type="number" placeholder="Enter SP" name="sellP"><br>
                    <input type="submit" value="submit">
                </form>
			</section>
		</div>
		
	</div>
</body>
</html>